    @Override
    public String rechargeXFsPay (ElectronicsAccountTXPayInputDTO dto){
        String journalSn = journalSnService.payJournalSn();// 交易流水号
        OrderEntityOutDTO order = this.orderClient.findEntityByOrderSnOfPay(dto.getOrderSn());
        if (order == null) {
            return "订单不存在!";
